<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_complete_base_info"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:clipToPadding="false"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin">

    <include layout="@layout/com_top_bar" />

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/bgcolor" />
    <!--headImage-->


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="57dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="13dp"
            android:text="添加头像"
            android:textColor="@color/color_left_title"
            android:textSize="12dp" />

        <ImageView
            android:id="@+id/right_arr"
            android:layout_width="6dp"
            android:layout_height="11dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical|right"
            android:layout_marginRight="13dp"
            android:background="@drawable/home_right_arr" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/tv_headIcon"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="26dp"
            android:background="@mipmap/jiaoshitouxiang"
            android:textColor="@color/appblack"
            app:civ_border_color="@color/white"
            app:civ_border_width="1dp" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="13dp"
        android:background="@color/bgcolor" />


    <!--联系电话-->
    <RelativeLayout
        android:id="@+id/rl_phone"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/white"
        android:clickable="true"
        android:minHeight="45dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="13dp"
            android:text="联系电话"
            android:textColor="@color/color_left_title"
            android:textSize="12dp" />


        <EditText
            android:id="@+id/et_phone"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="26dp"
            android:background="@drawable/drawable_edittext_changepwd"
            android:gravity="left|center"
            android:textColor="@color/color_text_color"
            android:textSize="12dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="3dp"
            android:layout_marginLeft="13dp"
            android:background="@color/bgcolor" />
    </RelativeLayout>
    <!--手机-->
    <RelativeLayout
        android:id="@+id/rl_cellphone"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/white"
        android:clickable="true"
        android:minHeight="45dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="13dp"
            android:text="手机"
            android:textColor="@color/color_left_title"
            android:textSize="12dp" />


        <EditText
            android:id="@+id/et_cellphone"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="26dp"
            android:background="@drawable/drawable_edittext_changepwd"
            android:gravity="left|center"
            android:textColor="@color/color_text_color"
            android:textSize="12dp" />


    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="3dp"
        android:layout_marginLeft="13dp"
        android:background="@color/bgcolor" />
    <!--微信号-->
    <RelativeLayout
        android:id="@+id/rl_wchat_num"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/white"
        android:clickable="true"
        android:minHeight="45dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="13dp"
            android:text="微信号"
            android:textColor="@color/color_left_title"
            android:textSize="12dp" />


        <EditText
            android:id="@+id/et_wchat"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="26dp"
            android:background="@drawable/drawable_edittext_changepwd"
            android:gravity="left|center"
            android:textColor="@color/color_text_color"
            android:textSize="12dp" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="3dp"
        android:layout_marginLeft="13dp"
        android:background="@color/bgcolor" />
    <!--邮件 -->
    <RelativeLayout
        android:id="@+id/rl_email"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/white"
        android:clickable="true"
        android:minHeight="45dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="13dp"
            android:text="邮件"
            android:textColor="@color/color_left_title"
            android:textSize="12dp" />


        <EditText
            android:id="@+id/et_email"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="26dp"
            android:background="@drawable/drawable_edittext_changepwd"
            android:gravity="left|center"
            android:textColor="@color/color_text_color"
            android:textSize="12dp" />


    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="3dp"
        android:layout_marginLeft="13dp"
        android:background="@color/bgcolor" />
    <!--qq-->
    <RelativeLayout
        android:id="@+id/rl_QQ"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/white"
        android:clickable="true"
        android:minHeight="45dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="13dp"
            android:text="QQ"
            android:textColor="@color/color_left_title"
            android:textSize="12dp" />


        <EditText
            android:id="@+id/et_qq"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="26dp"
            android:background="@drawable/drawable_edittext_changepwd"
            android:gravity="left|center"
            android:textColor="@color/color_text_color"
            android:textSize="12dp" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="3dp"
        android:layout_marginLeft="13dp"
        android:background="@color/bgcolor" />
    <!--role-->
    <RelativeLayout
        android:id="@+id/rl_role"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/white"
        android:clickable="true"
        android:minHeight="45dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="13dp"
            android:text="职位"
            android:textColor="@color/color_left_title"
            android:textSize="12dp" />


        <EditText
            android:id="@+id/et_role"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="26dp"
            android:background="@drawable/drawable_edittext_changepwd"
            android:gravity="left|center"
            android:textColor="@color/color_text_color"
            android:textSize="12dp" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="3dp"
        android:layout_marginLeft="13dp"
        android:background="@color/bgcolor" />
    <!--gs-->
    <RelativeLayout
        android:id="@+id/rl_company"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/white"
        android:clickable="true"
        android:minHeight="45dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="13dp"
            android:text="公司"
            android:textColor="@color/color_left_title"
            android:textSize="12dp" />


        <EditText
            android:id="@+id/et_company"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="26dp"
            android:background="@drawable/drawable_edittext_changepwd"
            android:gravity="left|center"
            android:textColor="@color/color_text_color"
            android:textSize="12dp" />


    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="3dp"
        android:layout_marginLeft="13dp"
        android:background="@color/bgcolor" />
    <!--简单描述-->
    <RelativeLayout
        android:id="@+id/rl_content"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/white"
        android:clickable="true"
        android:minHeight="45dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="13dp"
            android:text="简单描述"
            android:textColor="@color/color_left_title"
            android:textSize="12dp" />


        <EditText
            android:id="@+id/et_content"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="26dp"
            android:background="@drawable/drawable_edittext_changepwd"
            android:gravity="left|center"
            android:textColor="@color/color_text_color"
            android:textSize="12dp" />


    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="3dp"
        android:layout_marginLeft="13dp"
        android:background="@color/bgcolor" />
    <!--picbannber-->
    <ImageView
        android:id="@+id/iv_sentpic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/add" />

</LinearLayout>