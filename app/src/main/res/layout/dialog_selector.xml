<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="232.33dp"
        android:background="#ebeff0"
        android:gravity="center">

        <Button
            android:id="@+id/btn_cancle"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="13dp"
            android:background="@null"
            android:text="返回"
            android:textColor="@color/color_cancel"
            android:textSize="12dp" />

        <Button
            android:id="@+id/btn_select"
            android:layout_width="44dp"
            android:layout_height="18dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="13dp"
            android:background="@drawable/drawable_btn_appcolor"
            android:gravity="center"
            android:text="确定"
            android:textColor="@color/white"
            android:textSize="12dp" />

        <View
            android:id="@+id/tv_title"
            android:layout_width="1px"
            android:layout_height="0px"
            android:layout_centerHorizontal="true"
            android:textColor="@color/appcolor"
            android:textSize="20sp" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="153dp"
            android:layout_marginTop="50dp"
            android:layout_below="@id/tv_title"
            android:layout_marginLeft="80dp"
            android:layout_marginRight="80dp"
            android:background="#ebeff0">

            <moni.anyou.com.view.widget.pikerview.view.PickerView
                android:id="@+id/year_pv"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3" />

            <moni.anyou.com.view.widget.pikerview.view.PickerView
                android:id="@+id/month_pv"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                app:isLoop="false" />

            <moni.anyou.com.view.widget.pikerview.view.PickerView
                android:id="@+id/day_pv"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2" />
        </LinearLayout>
    </RelativeLayout>


</LinearLayout>