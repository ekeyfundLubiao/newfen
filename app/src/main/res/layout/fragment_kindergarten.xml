                        android:drawablePadding="7dp"
                        android:gravity="left|center_vertical"
                        android:text="电话：     13798076789"
                        android:textColor="@color/color_text_color"
                        android:textSize="12dp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:background="@color/listviewfenge" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:background="@color/white"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_Address"
                        android:layout_width="match_parent"
                        android:layout_height="34dp"
                        android:layout_marginLeft="13dp"
                        android:layout_marginRight="13dp"
                        android:drawableLeft="@mipmap/didian"
                        android:drawablePadding="13dp"
                        android:gravity="left|center_vertical"
                        android:text="地址：     上海市普陀区长城大厦2609"
                        android:textColor="@color/color_text_color"
                        android:textSize="12dp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:background="@color/listviewfenge" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_shcoolIntr"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:background="@color/white"
                    android:gravity="center_vertical"
                    android:paddingLeft="13dp"
                    android:text="校园简介："
                    android:textColor="@color/color_text_color"
                    android:textSize="14dp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/listviewfenge" />

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rv_teach_show"
                    android:layout_width="match_parent"
                    android:layout_height="136dp" />
