    <ScrollView

        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/layout_banner"
                android:layout_width="match_parent"
                android:layout_height="199dp"
                android:background="@color/white"
                android:padding="7dp">

                <com.m086.ad.mobi.widget.banner.AutoScrollViewPager

                    android:id="@+id/bannerView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@mipmap/banner" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:background="@color/white"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_tellPhoe"
                    android:layout_width="match_parent"
                    android:layout_height="34dp"
                    android:layout_marginLeft="13dp"
                    android:layout_marginRight="13dp"
                    android:drawableLeft="@mipmap/icon_tel"
                    android:drawablePadding="7dp"
                    android:gravity="left|center_vertical"
                    android:text="电话：     13798076789"
                    android:textColor="@color/color_text_color"
                    android:textSize="12dp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_marginLeft="7dp"
                    android:layout_marginRight="7dp"
                    android:background="@color/listviewfenge" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:background="@color/white"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_Address"
                    android:layout_width="match_parent"
                    android:layout_height="34dp"
                    android:layout_marginLeft="13dp"
                    android:layout_marginRight="13dp"
                    android:drawableLeft="@mipmap/icon_address"
                    android:drawablePadding="7dp"
                    android:gravity="left|center_vertical"
                    android:text="地址：     上海市普陀区长城大厦2609"
                    android:textColor="@color/color_text_color"
                    android:textSize="12dp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_marginLeft="7dp"
                    android:layout_marginRight="7dp"
                    android:background="@color/listviewfenge" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_shcoolIntr"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:paddingLeft="13dp"
                android:text="校园简介："
                android:textColor="@color/color_text_color"
                android:textSize="14dp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginLeft="7dp"
                android:layout_marginRight="7dp"
                android:background="@color/listviewfenge" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_teach_show"
                android:layout_width="match_parent"
                android:layout_height="136dp" />
            <!--<View-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="1dp"-->
            <!--android:background="@color/listviewfenge" />-->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical"
                android:visibility="visible">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_marginLeft="7dp"
                    android:layout_marginRight="7dp"
                    android:background="@color/listviewfenge" />

                <TextView
                    android:id="@+id/tv_intro_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:lineSpacingExtra="4dp"
                    android:paddingLeft="9dp"
                    android:paddingRight="9dp"
                    android:text=""
                    android:textColor="@color/color_text_color"
                    android:textSize="12dp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_marginLeft="7dp"
                    android:layout_marginRight="7dp"
                    android:background="@color/listviewfenge" />
            </LinearLayout>


            <android.support.v7.widget.RecyclerView
                android:id="@+id/rc_image"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:clickable="true"
                android:numColumns="3"
                android:visibility="gone" />

        </LinearLayout>
    </ScrollView>
    <!--</com.scu.miomin.shswiperefresh.core.SHSwipeRefreshLayout>-->
    <!--</in.srain.cube.views.ptr.PtrClassicFrameLayout>-->
</LinearLayout>
