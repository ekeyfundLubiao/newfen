<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/dialog_netprogress_width"
    android:layout_height="wrap_content"
    android:background="@drawable/progress_load_bg"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="@dimen/dialog_netprogress_bg_width"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/dialog_netprogress_padding_top">

        <ProgressBar
            android:id="@+id/progressBar1"
            style="?android:attr/progressBarStyleLarge"
            android:layout_width="@dimen/dialog_netprogress_width"
            android:layout_height="@dimen/dialog_netprogress_height"
            android:layout_centerInParent="true" />
    </RelativeLayout>

    <TextView
        android:id="@+id/text1"
        android:layout_width="@dimen/dialog_netprogress_bg_width"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginBottom="@dimen/dialog_netprogress_padding_bottom"
        android:layout_marginTop="@dimen/dialog_netprogress_padding_top_simple"
        android:layout_gravity="center"
        android:layout_toRightOf="@id/progressBar1"
        android:gravity="center"
        android:text="加载数据"
        android:textColor="#FFFFFF"
        android:textSize="18sp" />
</LinearLayout>


