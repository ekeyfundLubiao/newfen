<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_person_info_setting"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:clipToPadding="false"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <include layout="@layout/com_top_bar" />

    <View
        android:layout_width="match_parent"
        android:layout_height="6dp"
        android:background="@color/bgcolor" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:background="@color/white"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="57dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="13dp"
                android:text="修改头像"
                android:textColor="@color/color_left_title" />

            <ImageView
                android:id="@+id/right_arr"
                android:layout_width="6dp"
                android:layout_height="11dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_gravity="center_vertical|right"
                android:layout_marginRight="13dp"
                android:background="@drawable/home_right_arr" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/tv_headIcon"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="26dp"
                android:background="@mipmap/jiaoshifengcai"
                android:textColor="@color/appblack"
                app:civ_border_color="@color/white"
                app:civ_border_width="1dp" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="13dp"
            android:background="@color/bgcolor" />

        <RelativeLayout
            android:id="@+id/rl_updatepwd"
            android:layout_width="match_parent"
            android:layout_height="51dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="13dp"
                android:text="修改密码"
                android:textColor="@color/color_left_title" />


            <TextView
                android:id="@+id/tv_changepwd"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:layout_marginRight="13dp"
                android:gravity="center"
                android:text="*****"
                android:textColor="@color/color_text_color" />

        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:background="@color/white">

        <View
            android:layout_width="match_parent"
            android:layout_height="15dp"
            android:layout_marginLeft="13dp"
            android:layout_marginRight="8dp"
            android:background="@color/bgcolor" />
    </LinearLayout>

    <moni.anyou.com.view.widget.NoListview
        android:id="@+id/lv_setselfInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="@null"
        android:dividerHeight="0dip" />

    <RelativeLayout
        android:id="@+id/rl_accout"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/white"
        android:clickable="true"
        android:minHeight="45dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="13dp"
            android:text="账号"
            android:textColor="@color/color_left_title" />

        <TextView
            android:id="@+id/tv_accout"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="13dp"
            android:text=""
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical|right"
            android:textColor="@color/color_text_color" />


        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="3dp"
            android:layout_marginLeft="13dp"
            android:background="@color/bgcolor" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_garden"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/white"
        android:clickable="true"
        android:minHeight="45dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="13dp"
            android:text="幼儿园"
            android:textColor="@color/color_left_title" />

        <TextView
            android:id="@+id/tv_garden"
            android:layout_width="55dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="26dp"
            android:text=""
            android:gravity="center_vertical|right"
            android:textColor="@color/color_text_color" />


        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="3dp"
            android:layout_marginLeft="13dp"
            android:background="@color/bgcolor" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_sex"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/white"
        android:clickable="true"
        android:minHeight="45dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="13dp"
            android:text="性別"
            android:textColor="@color/color_left_title" />


        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="3dp"
            android:layout_marginLeft="13dp"
            android:background="@color/bgcolor" />

        <TextView
            android:id="@+id/tv_sex"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_marginRight="13dp"
            android:gravity="center_vertical|right"
            android:textColor="@color/color_text_color"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="26dp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_brith"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/white"
        android:clickable="true"
        android:minHeight="45dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="13dp"
            android:text="出生日期"
            android:textColor="@color/color_left_title" />


        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="3dp"
            android:layout_marginLeft="13dp"
            android:background="@color/bgcolor" />

        <TextView
            android:id="@+id/tv_brithday"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_marginRight="13dp"
            android:text="2012-1-1"
            android:gravity="center_vertical|right"
            android:textColor="@color/color_text_color"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="26dp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_relate"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/white"
        android:clickable="true"
        android:minHeight="45dp">


        <TextView
            android:id="@+id/tv_relatetobaby"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="13dp"
            android:text="粑粑"
            android:gravity="center_vertical|right"
            android:textColor="@color/color_text_color" />

        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="3dp"
            android:layout_marginLeft="13dp"
            android:background="@color/bgcolor" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/tv_relatetobaby"
            android:layout_alignBottom="@+id/tv_relatetobaby"
            android:layout_alignLeft="@+id/view"
            android:layout_alignStart="@+id/view"
            android:text="与宝宝关系"
            android:textColor="@color/color_left_title" />
    </RelativeLayout>
</LinearLayout>
