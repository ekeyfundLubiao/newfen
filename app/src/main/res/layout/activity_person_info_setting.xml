<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_person_info_setting"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipToPadding="false"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <include layout="@layout/com_top_bar" />
    <LinearLayout
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:background="@color/white"
        android:orientation="vertical"
        android:layout_height="110dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="55dp">
            <TextView
                android:textColor="@color/appblack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="13dp"
                android:text="修改头像"/>
            <ImageView
                android:id="@+id/right_arr"
                android:layout_width="6dp"
                android:layout_height="11dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_gravity="center_vertical|right"
                android:layout_marginRight="13dp"
                android:background="@drawable/home_right_arr" />
            <ImageView
                android:id="@+id/tv_headIcon"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginRight="26dp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:background="@mipmap/home_icon_about"
                android:textColor="@color/appblack" />
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="13dp"
            android:background="@color/bgcolor"
            />

        <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="55dp">
            <TextView
                android:textColor="@color/appblack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="13dp"
                android:text="修改密码"/>
            <LinearLayout
                android:id="@+id/ll_changepwd"
                android:layout_width="50dp"
                android:layout_alignParentRight="true"
                android:gravity="right"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_width="6dp"
                    android:layout_height="11dp"
                    android:layout_gravity="center"
                    android:layout_marginRight="13dp"
                    android:background="@drawable/home_right_arr" />
            </LinearLayout>


        </RelativeLayout>
    </LinearLayout>

    <moni.anyou.com.view.widget.NoListview
        android:id="@+id/lv_setselfInfo"
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:divider="@null"
        android:dividerHeight="0dip"
        android:layout_height="wrap_content"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/white"
        android:minHeight="45dp"
        android:clickable="true"
        android:id="@+id/rl_sex">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="13dp"
            android:text="性別"
            android:textColor="@color/appblack" />

        <RadioGroup
            android:id="@+id/radiogroup_sex"
            android:layout_width="wrap_content"
            android:layout_marginRight="26dp"
            android:orientation="horizontal"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_height="match_parent">
            <RadioButton
                android:id="@+id/boy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/appblack"
                android:text="男孩"/>
            <RadioButton
                android:id="@+id/girl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/appblack"
                android:text="女孩"/>
        </RadioGroup>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:background="@color/bgcolor"
            android:layout_marginBottom="3dp"
            android:layout_marginLeft="13dp"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/white"
        android:minHeight="45dp"
        android:clickable="true"
        android:id="@+id/rl_brith">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="13dp"
            android:text="出生日期"
            android:textColor="@color/appblack" />

        <ImageView
            android:layout_width="6dp"
            android:layout_height="11dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical|right"
            android:layout_marginRight="13dp"
            android:background="@drawable/home_right_arr" />
        <TextView
            android:id="@+id/tv_brithday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="26dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:text="2012-1-1"
            android:textColor="@color/appblack" />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:background="@color/bgcolor"
            android:layout_marginBottom="3dp"
            android:layout_marginLeft="13dp"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/white"
        android:minHeight="45dp"
        android:clickable="true"
        android:id="@+id/rl_relate">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="13dp"
            android:text="与宝宝关系"
            android:textColor="@color/appblack" />

        <ImageView
            android:layout_width="6dp"
            android:layout_height="11dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical|right"
            android:layout_marginRight="13dp"
            android:background="@drawable/home_right_arr" />
        <TextView
            android:id="@+id/tv_relatetobaby"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="26dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:text="粑粑"
            android:textColor="@color/appblack" />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:background="@color/bgcolor"
            android:layout_marginBottom="3dp"
            android:layout_marginLeft="13dp"/>
    </RelativeLayout>
</LinearLayout>
