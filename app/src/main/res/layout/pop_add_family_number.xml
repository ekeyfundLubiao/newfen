<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/pop_layout"
    style="@style/MyDialogStyleBottom"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rlTab"
        android:layout_width="match_parent"
        android:layout_height="286dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_gravity="center_vertical"
        android:background="@color/white">

        <Button
            android:id="@+id/btn_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="13dp"
            android:layout_marginTop="13dp"
            android:background="@null"
            android:text="返回"
            android:textColor="@color/color_cancel"
            android:textSize="18dp" />

        <Button
            android:id="@+id/btn_commit"
            android:layout_width="50dp"
            android:layout_height="25dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="13dp"
            android:layout_marginTop="13dp"
            android:background="@drawable/drawable_btn_appcolor"
            android:text="确定"
            android:textColor="@color/white"
            android:textSize="18dp"
            android:visibility="gone" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="52dp"
            android:gravity="center_horizontal"
            android:text="恭喜您添加成功"
            android:textColor="@color/appcolor"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/tv_relation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="80dp"
            android:gravity="center_horizontal"
            android:text="关系：----------"
            android:textColor="@color/color_cancel"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/tv_account"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_relation"
            android:layout_marginTop="10dp"
            android:gravity="center_horizontal"
            android:text="账号：----------"
            android:textColor="@color/color_cancel"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/tv_passwold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_account"
            android:layout_marginTop="10dp"
            android:gravity="center_horizontal"
            android:text="密码：----------"
            android:textColor="@color/color_cancel"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/tv_tips"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_passwold"
            android:layout_marginTop="19dp"
            android:gravity="center_horizontal"
            android:text="您可以通过手机短信、微信告知亲友"
            android:textColor="@color/color_cancel"
            android:textSize="14dp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_tips"
            android:layout_marginTop="13dp">

            <View
                android:id="@+id/centerview"
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:layout_centerInParent="true" />

            <LinearLayout
                android:id="@+id/llMsg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@id/centerview"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv_msg"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:layout_marginRight="20dp"
                    android:background="@mipmap/home_icon_addressbook" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/iv_msg"
                    android:gravity="center"
                    android:layout_toLeftOf="@id/centerview"
                    android:text="短信" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/llWechat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/centerview"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:layout_marginLeft="20dp"
                    android:layout_toRightOf="@id/centerview"
                    android:background="@mipmap/home_icon_invite_family" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/iv_msg"
                    android:layout_marginLeft="20dp"
                    android:gravity="center"
                    android:layout_toLeftOf="@id/centerview"
                    android:text="微信" />
            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>