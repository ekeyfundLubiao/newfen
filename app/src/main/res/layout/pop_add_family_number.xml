<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/pop_layout"
    style="@style/MyDialogStyleBottom"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rlTab"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:background="#ebeff0"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <Button
            android:id="@+id/btn_cancel"
            android:layout_width="33dp"
            android:layout_height="33dp"
            android:layout_marginLeft="13dp"
            android:layout_marginTop="13dp"
            android:background="@null"
            android:text="返回"
            android:textColor="@color/color_7f7f7f"
            android:textSize="12dp" />

        <Button
            android:id="@+id/btn_commit"
            android:layout_width="50dp"
            android:layout_height="25dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="13dp"
            android:layout_marginTop="13dp"
            android:background="@drawable/drawable_btn_appcolor"
            android:text="确定"
            android:textColor="@color/white"
            android:textSize="18dp"
            android:visibility="gone" />


        <TextView
            android:id="@+id/tv_tips"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/rl_accout"
            android:layout_marginTop="19dp"
            android:gravity="center_horizontal"
            android:text="您可以通过手机短信、微信告知亲友"
            android:textColor="@color/color_cancel"
            android:textSize="21dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_tips"
            android:layout_marginBottom="23dp"
            android:layout_marginTop="19dp">


            <RelativeLayout
                android:id="@+id/llMsg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv_msg"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginRight="20dp"
                    android:background="@mipmap/duxin" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/iv_msg"
                    android:layout_marginTop="15dp"
                    android:gravity="center"
                    android:text="短信"
                    android:textColor="@color/color_7f7f7f"
                    android:textSize="21dp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/llWechat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv_wx"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="20dp"
                    android:background="@mipmap/weixin" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/iv_wx"
                    android:layout_marginTop="15dp"
                    android:gravity="center"
                    android:text="微信"
                    android:textColor="@color/color_7f7f7f"
                    android:textSize="21dp" />
            </RelativeLayout>
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/rl_accout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/btn_cancel"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:gravity="left"
                android:text="恭喜您添加成功"
                android:textColor="@color/appcolor"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/tv_relation"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/textView2"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="13dp"
                android:gravity="left"
                android:text="关系：----------"
                android:textColor="@color/color_7f7f7f"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/tv_account"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_relation"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="13dp"
                android:gravity="left"
                android:text="账号：----------"
                android:textColor="@color/color_7f7f7f"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/tv_passwold"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_account"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="13dp"
                android:gravity="left"
                android:text="密码：----------"
                android:textColor="@color/color_7f7f7f"
                android:textSize="18dp" />

        </RelativeLayout>


    </RelativeLayout>

</RelativeLayout>