<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_updatepwd"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:clipToPadding="false"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context="moni.anyou.com.view.view.daily.LoginActivity">

    <include
        android:id="@+id/topbar"
        layout="@layout/com_top_bar" />

    <View
        android:layout_width="match_parent"
        android:layout_height="13dp"
        android:background="@color/bgcolor" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="45dp"
        android:layout_marginRight="45dp"
        android:layout_marginTop="13dp"
        android:background="@drawable/drawable_edittext_changepwd">

        <TextView
            android:id="@+id/tv_oldpwd"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="13dp"
            android:text="原密码"
            android:textColor="@color/color_left_title"
            android:textSize="12dp" />

        <EditText
            android:id="@+id/et_oldpwd"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_marginRight="45dp"
            android:layout_toRightOf="@id/tv_oldpwd"
            android:background="@null"
            android:maxLines="1"
            android:paddingLeft="13dp"
            android:text=""
            android:textColor="@color/color_text_color" />
    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="45dp"
        android:layout_marginRight="45dp"
        android:layout_marginTop="13dp"
        android:background="@drawable/drawable_edittext_changepwd">

        <TextView
            android:id="@+id/tv_newpwd"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="13dp"
            android:text="新密码"
            android:textColor="@color/color_left_title"
            android:textSize="12dp" />

        <EditText
            android:id="@+id/et_newpwd"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="45dp"
            android:layout_marginTop="13dp"
            android:layout_toRightOf="@id/tv_newpwd"
            android:background="@null"
            android:inputType="textPassword"
            android:maxLines="1"
            android:paddingLeft="13dp"
            android:textSize="12dp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="45dp"
        android:layout_marginRight="45dp"
        android:layout_marginTop="13dp"
        android:background="@drawable/drawable_edittext_changepwd">

        <TextView
            android:id="@+id/tv_renewpwd"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="13dp"
            android:text="再次输入"
            android:textColor="@color/color_left_title"
            android:textSize="12dp" />

        <EditText
            android:id="@+id/et_renewpwd"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="45dp"
            android:layout_marginTop="13dp"
            android:layout_toRightOf="@id/tv_renewpwd"
            android:background="@null"
            android:inputType="textPassword"
            android:maxLines="1"
            android:paddingLeft="13dp"
            android:textSize="12dp" />
    </RelativeLayout>

    <Button
        android:id="@+id/btn_commit"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="22dp"
        android:background="@drawable/drawable_btn_appcolor"
        android:singleLine="true"
        android:text="修改"
        android:textColor="@color/white" />
</LinearLayout>
