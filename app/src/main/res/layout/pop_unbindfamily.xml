<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/pop_layout"
    style="@style/MyDialogStyleBottom"
    android:background="#b0000000"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/rlTab"
        android:layout_centerInParent="true"
        android:layout_width="match_parent"
        android:layout_height="232.33dp"
        android:layout_gravity="center_vertical"
        android:background="#ebeff0">
        <Button
            android:id="@+id/btn_unbindcancel"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="13dp"
            android:background="@null"
            android:layout_marginTop="13dp"
            android:text="返回"
            android:textColor="@color/color_cancel"
            android:textSize="12dp" />
        <Button
            android:id="@+id/btn_unbindcommit"
            android:layout_width="50dp"
            android:layout_height="25dp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="13dp"
            android:layout_marginRight="13dp"
            android:text="确定"
            android:background="@drawable/drawable_btn_appcolor"
            android:textColor="@color/white"
            android:textSize="12dp" />
        <TextView
            android:text="提示"
            android:layout_marginTop="58dp"
            android:textColor="@color/color_cancel"
            android:textSize="18dp"
            android:gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:text="提示"
            android:layout_marginTop="58dp"
            android:textColor="@color/color_cancel"
            android:textSize="18dp"
            android:gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:text="是否解绑该亲友？"
            android:layout_marginTop="100dp"
            android:textColor="@color/color_cancel"
            android:textSize="18dp"
            android:gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </RelativeLayout>

</RelativeLayout>