<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="45dp"
    android:background="@color/white"
    android:minHeight="45dp"
    android:id="@+id/rl_home_item"
    android:clickable="true"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_home_icon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="13dp"
        android:background="@mipmap/home_icon_new" />

    <TextView
        android:id="@+id/tv_home_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="8dp"
        android:layout_toRightOf="@id/iv_home_icon"
        android:text="title"
        android:textColor="@color/appblack" />

    <ImageView
        android:id="@+id/right_arr"
        android:layout_width="6dp"
        android:layout_height="11dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_gravity="center_vertical|right"
        android:layout_marginRight="13dp"
        android:background="@drawable/home_right_arr" />
    <TextView
        android:id="@+id/tv_home_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="13dp"
        android:layout_toLeftOf="@id/right_arr"
        android:text="title"
        android:textColor="@color/appblack" />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:background="@color/bgcolor"
        android:layout_marginBottom="3dp"
        android:layout_marginLeft="13dp"/>
</RelativeLayout>