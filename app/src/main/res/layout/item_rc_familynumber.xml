<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/item_id"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="13dp"
    android:background="@drawable/drawable_familynumber_bg"
    android:minHeight="80dp">


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:layout_marginTop="5dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/iv_icon"
            android:layout_width="45dp"
            android:src="@drawable/loading_null_11"
            android:layout_centerVertical="true"
            app:civ_border_width="1dp"
            app:civ_border_color="@color/appcolor"
            android:layout_marginLeft="5dp"
            android:layout_height="45dp" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_alignTop="@+id/iv_icon"
            android:layout_toRightOf="@id/iv_icon"
            android:background="@color/white">

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="13dp"
                android:text="称谓"
                android:textColor="@color/appcolor" />

            <TextView
                android:id="@+id/tv_relation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/tv_name"
                android:paddingLeft="5dp"
                android:text="[自己]"
                android:textColor="@color/color_99999" />

            <TextView
                android:id="@+id/tv_phonenum"
                android:layout_width="wrap_content"
                android:layout_height="13dp"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="13dp"
                android:text="13908706767" />
        </RelativeLayout>
    </RelativeLayout>

    <ImageView
        android:id="@+id/iv_mark"
        android:layout_width="16dp"
        android:layout_height="13dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="8dp"
        android:layout_marginTop="5dp"
        android:background="@mipmap/icon_heart" />

    <ImageView
        android:id="@+id/iv_delete"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="8dp"
        android:layout_marginTop="5dp"
        android:background="@mipmap/icon_delete"
        android:visibility="gone" />
</RelativeLayout>